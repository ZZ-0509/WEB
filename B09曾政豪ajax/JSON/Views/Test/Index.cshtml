
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <form id="formLogin">
            用户名：<input type="text" id="name" placeholder="用户名" name="UseraName"/>
            密码：<input type="text" id="pwa" placeholder="密码" name="PassWord" />
            <input type="button" id="bthLogin" value="登录"/>
        </form>
    </div>
    <div id="imgVerifyCode"></div>

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script>
        $("#btnLogin").click(function(){
            $.ajax({
                url:"Test/Index",
                date: { UseraName: $("#name").val(), PassWord: $("pwa").val() },
                type:'post',
                dataType:'text',
                success:function(data){
                    if (data == "OK")
                    {
                        window.location.href = '/Test/success';
                    }
                    else
                    {
                        $("#imgVerifyCode").html(data);
                    }
                },
                error:function(){
                    $("#imgVerifyCode").html(有误);
                }
            });
        });
    </script>
</body>
</html>
