
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <input type="radio" value="GD" name="Province" />  广东
        <input type="radio" value="GX"  name="Province" />  广西
    </div>
    <div id="city"></div>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script>
       
        $("input[type='radio']").click(function () {
            var value = $("input[type='radio']:Checked").val();
            $.ajax({
                url: '/TestHtml/Pror',
                data: { "name": value },
                type: 'post',
                dataType: 'html',
                success: function (data) {
                    $("#city").html(data);
                }
            });
        });
    </script>

</body>
</html>
