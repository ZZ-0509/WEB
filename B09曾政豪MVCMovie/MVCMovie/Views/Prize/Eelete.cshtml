@using MVCMovie.Models;
@model Prize
@{
    Layout = "~/Views/Shared/_Film.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eelete</title>
</head>
<body>
    <h2>请确认要删除所选奖项吗？？？？</h2>
    <div>电影:@Model.Name</div>
    <div>
        <form method="post">
            <div>
                <input type="hidden" value="@Model.Id" name="Id" />
                <input type="hidden" value="@Model.Name" name="Name" />
            </div>
            <div>
                <input type="submit" value="删除" />
                |
                <a href="/Prize/Index">返回</a>
            </div>
        </form>
    </div>
</body>
</html>
